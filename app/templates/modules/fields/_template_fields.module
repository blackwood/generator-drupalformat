<?php

/**
 * @file
 * <%= moduleName %>_fields.module
 */

/**
 * Implements hook_field_formatter_info().
 */
function <%= moduleName %>_fields_field_formatter_info() {
  return array(
    '<%= moduleName %>_formatter' => array(
      'label' => t('<%= moduleProper %>'),
      'field types' => array('image', 'text', 'text_long', 'text_with_summary'),
      'settings'  => array(
        'settings_group' => 'default',
        'image_style' => 'large',
        'trim_length' => '',
      ),
    ),
  );
}

/**
 * Implements hook_field_formatter_settings_form().
 */
function <%= moduleName %>_fields_field_formatter_settings_form($field, $instance, $view_mode, $form, &$form_state) {
  $display = $instance['display'][$view_mode];
  $settings = $display['settings'];

  $element = array();
  $element['settings_group'] = array(
    '#type' => 'select',
    '#title' => t('Settings Group'),
    '#description' => t('Select the settings group to apply.'),
    '#default_value' => $settings['settings_group'],
    '#options' => <%= moduleName %>_instance_callback_list(),
  );

  if ($field['type'] == 'image') {
    $element['image_style'] = array(
      '#type' => 'select',
      '#title' => t('Image Style'),
      '#description' => t('Apply image style.'),
      '#default_value' => $settings['image_style'],
      '#options' => image_style_options(),
    );
  }

  if (strpos($field['type'], 'text_') !== false) {
    $element['trim_length'] = array(
      '#title' => t('Trim length'),
      '#type' => 'textfield',
      '#size' => 10,
      '#default_value' => $settings['trim_length'],
      '#element_validate' => array('element_validate_integer_positive'),
    );
  }

  return $element;
}

/**
 * Implements hook_field_formatter_settings_summary().
 */
function <%= moduleName %>_fields_field_formatter_settings_summary($field, $instance, $view_mode) {
  $display = $instance['display'][$view_mode];
  $settings = $display['settings'];

  $message = '@settings applied to parent instance.';
  if ($field['type'] == 'image') {
    $message = '@settings with image style @style applied to parent instance.';
  }

  $summary = t($message, array(
    '@settings' => $settings['settings_group'],
    '@style' => $settings['image_style'],
  ));

  return $summary;
}

/**
 * Implements hook_field_formatter_view().
 */
function <%= moduleName %>_fields_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
  $settings = $display['settings'];

  // Format parent settings.
  $settings_group = array(
    'instance' => $settings['settings_group'],
    'attributes' => array(
      'id' => array(
        'default' => drupal_html_id('<%= moduleName %>_fields_' . $instance['id'])
      ),
    ),
  );

  // Format parent items.
  switch ($field['type']) {
    case 'text':
    case 'text_long':
    case 'text_with_summary':
      foreach ($items as $item) {
        if (!empty($item['summary'])) {
          $output = _text_sanitize($instance, $langcode, $item, 'summary');
        }
        else {
          $output = _text_sanitize($instance, $langcode, $item, 'value');
          if (isset($display['settings']['trim_length'])) {
            $output = text_summary($output, $instance['settings']['text_processing'] ? $item['format'] : NULL, $display['settings']['trim_length']);
          }
        }

        $items_group[]['row'] = $output;
      }
    break;
    case 'image':
      foreach ($items as $item) {
        $vars = array(
          'style_name' => $settings['image_style'],
          'path' => $item['uri'],
          'width' => $item['width'],
          'height' => $item['height'],
          'alt' => $item['alt'],
          'title' => $item['title'],
        );

        $items_group[]['row'] = theme('image_style', $vars);
      }
    break;
  }

  $element = array(
    '#theme' => '<%= moduleName %>',
    '#items' => $items_group,
    '#settings' => $settings_group,
  );

  return $element;
}
